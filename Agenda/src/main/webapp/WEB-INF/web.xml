<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://java.sun.com/xml/ns/javaee"
         xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://java.sun.com/xml/ns/javaee
                             https://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Agenda</display-name>

    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>com.agenda.filter.SessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.agenda.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.agenda.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.agenda.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AtividadesServlet</servlet-name>
        <servlet-class>com.agenda.servlet.AtividadesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AtividadesServlet</servlet-name>
        <url-pattern>/atividades</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PerfilServlet</servlet-name>
        <servlet-class>com.agenda.servlet.PerfilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfilServlet</servlet-name>
        <url-pattern>/perfil</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>paginas/login.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>CalendarioServlet</servlet-name>
        <servlet-class>com.agenda.servlet.CalendarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalendarioServlet</servlet-name>
        <url-pattern>/calendario</url-pattern>
    </servlet-mapping>

</web-app>